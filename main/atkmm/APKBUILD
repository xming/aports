# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=atkmm
pkgver=2.24.1
pkgrel=0
pkgdesc="C++ bindings for atk"
url="http://gtkmm.sourceforge.net/"
arch="all"
license="LGPL2+"
depends=""
makedepends="atk-dev glibmm-dev libsigc++-dev"
subpackages="$pkgname-dev $pkgname-doc"
source="http://ftp.gnome.org/pub/GNOME/sources/atkmm/${pkgver%.*}/atkmm-$pkgver.tar.xz"
replaces="gtkmm"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="279f32c23b74e5d25bce2b941294cdc8  atkmm-2.24.1.tar.xz"
sha256sums="26c41d8da37d04eef9f219c6ce87d94852e1cacaad823050e520e1c08a36ed23  atkmm-2.24.1.tar.xz"
sha512sums="1d33de71187b6c36b0f3a3803733c36616da41e31edbdd4d37454fdee478a6989fc43c0075c80896cc57aba3f1e25610626ad853926af69e7b2c6a78a97ff0e1  atkmm-2.24.1.tar.xz"
