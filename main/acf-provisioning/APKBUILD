_luaversion=5.2
pkgname=acf-provisioning
pkgver=0.9.1
pkgrel=0
pkgdesc="ACF for provisioning templated configs to devices"
url="http://git.alpinelinux.org/cgit/acf-provisioning"
arch="noarch"
license="GPL2"
depends="acf-core lua-sql-postgres postgresql-client lua-posixtz lua-xml"
makedepends=""
install=""
subpackages=""
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir"/$pkgname-$pkgver

	# fix shebang
	sed -i -e "1s:#!/usr/bin/haserl :#!/usr/bin/haserl-lua$_luaversion :" \
		cgi-bin/provisioning.cgi || return 1
	
	make DESTDIR="$pkgdir" install
}

md5sums="a040105a6011a6d48fc9b80ee7453dbe  acf-provisioning-0.9.1.tar.xz"
sha256sums="99887164626beb66f4dbf1d089c953f8f4cd5e6849354cbcc87e9c3371426a5e  acf-provisioning-0.9.1.tar.xz"
sha512sums="6b0e22a3e4808364f840c1e085305796f8e8d49b6d6eafb3f45f81699ec3c3813f073920db40e16c0f5a363691af5451a2972865f9f2b36744b9151190f92474  acf-provisioning-0.9.1.tar.xz"
