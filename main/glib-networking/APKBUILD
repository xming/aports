# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=glib-networking
pkgver=2.49.90
_maj=${pkgver%%.*}
_min=${pkgver#${_maj}.}
_min=${_min%%.*}
_ver=$_maj.$_min
pkgrel=0
pkgdesc="Networking support for GLib"
url="http://www.gnome.org"
arch="all"
license="LGPLv2+"
depends="ca-certificates"
depends_dev="glib-dev gnutls-dev libproxy-dev intltool libgcrypt-dev"
makedepends="$depends_dev bash p11-kit-dev"
install=
subpackages="$pkgname-lang"
source="http://download.gnome.org/sources/glib-networking/$_ver/glib-networking-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	CONFIG_SHELL=/bin/bash ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-more-warnings \
		--with-libproxy \
		--with-gnutls \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/gio/modules/*.a
}

md5sums="8fd549ab8b859be170a4785f134ba29b  glib-networking-2.49.90.tar.xz"
sha256sums="409ceae012ce6f8ad12aaded90e6a08b82507de6a9a70ca6eb05e17244f2129b  glib-networking-2.49.90.tar.xz"
sha512sums="48c1e483622187b5ecd73d7a4378ecee9474f57184a77d09418523a01c03a5a8a96beb1ab3b43855cf654e839f24bab18c4382b16b38d5aa105f6ad429e0bd42  glib-networking-2.49.90.tar.xz"
