# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=glibmm
pkgver=2.46.1
pkgrel=0
pkgdesc="C++ wrapper for the GLib toolkit"
url="http://gtkmm.sourceforge.net/"
arch="all"
license="LGPL"
depends=
makedepends="glib-dev libsigc++-dev"
subpackages="$pkgname-dev $pkgname-doc"
depends_dev="libsigc++-dev"
source="http://ftp.gnome.org/pub/GNOME/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

dev() {
	mkdir -p "$subpkgdir"/usr/lib/
	mv "$pkgdir"/usr/lib/glibmm-2.4 "$subpkgdir"/usr/lib/
	default_dev
}

doc() {
	default_doc
	mkdir -p "$subpkgdir"/usr/share/
	mv "$pkgdir"/usr/share/devhelp "$subpkgdir"/usr/share/
}

md5sums="77ad60087aae6f9378ea0ba0b743e5df  glibmm-2.46.1.tar.xz"
sha256sums="9647e596c1081d2ea202bd3da2824ec2ea359498fa86eb59a55b1b307dd8c4aa  glibmm-2.46.1.tar.xz"
sha512sums="4209264ec40e8894d3b4876f65af1458b6a15e22e3069058bf7f32854b5150a1890359cee878d29de94f609e423dc6f8467cffbbecf4a30d5810c890ad40b981  glibmm-2.46.1.tar.xz"
