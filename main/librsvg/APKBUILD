# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=librsvg
pkgver=2.40.13
pkgrel=0
pkgdesc="SAX-based renderer for SVG files into a GdkPixbuf"
url="http://live.gnome.org/LibRsvg"
arch="all"
license="LGPL"
subpackages="$pkgname-dev $pkgname-doc"
depends=
depends_dev="glib-dev gtk+2.0-dev cairo-dev libcroco-dev libgsf-dev"
makedepends="$depends_dev bzip2-dev gobject-introspection-dev"
install=
source="http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz
	"


_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--libexecdir=/usr/lib/$pkgname \
		--disable-static \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR=""$pkgdir"" install || return 1
	rm -rf "$pkgdir"/usr/lib/mozilla || return 1
}

md5sums="ad03780e12c56e52474d8edf86976c73  librsvg-2.40.13.tar.xz"
sha256sums="4d6ea93ec05f5dabe7262d711d246a0a99b2311e215360dd3dcabd6afe3b9804  librsvg-2.40.13.tar.xz"
sha512sums="7549f78d25c3319b5b74803c46cc0d1bd5c53a425b632a5b306eb238080df0da2b4bcefb159064988bd56cb1d69e0c94ecd0a073315acff14abb187ba6d4c788  librsvg-2.40.13.tar.xz"
