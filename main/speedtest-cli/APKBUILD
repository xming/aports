# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=speedtest-cli
pkgver=0.3.2
pkgrel=0
pkgdesc="Command line interface for testing internet bandwidth using speedtest.net"
url="https://github.com/sivel/speedtest-cli"
arch="noarch"
license="ASL 2.0"
depends="python"
depends_dev="python-dev py-setuptools"
makedepends="$depends_dev"
install=""
subpackages=""
source="$pkgname-$pkgver.tar.gz::https://github.com/sivel/speedtest-cli/archive/v$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
build() {
        cd "$_builddir"
        python setup.py build || return 1
}

package() {
        cd "$_builddir"
        python setup.py install --prefix=/usr --root="$pkgdir" || return 1
	install -Dm755 speedtest_cli.py "$pkgdir"/usr/bin/speedtest-cli
}

md5sums="86f8ef30a724c5ee577d91c42e17b5fb  speedtest-cli-0.3.2.tar.gz"
sha256sums="54e55252ffa3c10ecbd5e23b08b01a42e149db3977ac4186f6bdf16b04d79511  speedtest-cli-0.3.2.tar.gz"
sha512sums="c98a10772f81b4db503483eb675cbdeacac7803c02a6554ee6d075143e93cfed0834ebda2f6ead5f75a169a5840d0789537dc06e1a8829d52ae112d0fc7eba6c  speedtest-cli-0.3.2.tar.gz"
