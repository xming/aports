# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gucharmap
pkgver=3.18.1
pkgrel=0
pkgdesc="the GNOME Character Map, based on the Unicode Character Database"
url="http://live.gnome.org/Gucharmap"
arch="all"
license="GPL"
depends=
makedepends="libxml2-utils gtk+3.0-dev itstool desktop-file-utils gobject-introspection-dev
	appstream-glib"
install=
subpackages="$pkgname-dev $pkgname-lang"
source="http://ftp.gnome.org/pub/GNOME/sources/gucharmap/${pkgver%.*}/gucharmap-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
}

md5sums="086939aebd9d146f6d773d0fed1b6b7f  gucharmap-3.18.1.tar.xz"
sha256sums="b286d09dcd7811e6678e3d5830970d310d5730f7be5657ec400295df0b36fa35  gucharmap-3.18.1.tar.xz"
sha512sums="087c7591e88db8af922230b1c01b35f66a6e68cfe2fcd7b4c1be29755a006ce2105901a1d551d76b7cd0efc6e7a9a7d374ef1c6e636c35e3f8fad9230fbd9a2f  gucharmap-3.18.1.tar.xz"
