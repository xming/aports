# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=adobe-flashplayer
pkgver=11.2.202.577
pkgrel=0
pkgdesc="Adobe Flash player"
url="https://get.adobe.com/flashplayer/otherversions"
arch="x86_64"
license="non-free"
depends="libc6-compat"
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="https://fpdownload.macromedia.com/get/flashplayer/pdc/$pkgver/install_flash_player_11_linux.x86_64.tar.gz"

_builddir=
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	return 0
}

package() {
	cd "$_builddir"
	mkdir -p "$pkgdir"/usr/lib/mozilla/plugins
	install "$srcdir"/libflashplayer.so "$pkgdir"/usr/lib/mozilla/plugins/
}

md5sums="49819876d0329f3b84eb232b5b88e0d8  install_flash_player_11_linux.x86_64.tar.gz"
sha256sums="7975c82e1faae67c8c2cb2d4057f5333c5c5594784b84452341848dfb7fe2090  install_flash_player_11_linux.x86_64.tar.gz"
sha512sums="48deb5bcbd0983552044778840fbd5568fb09ddecee47a98ad57d699f2d56f91cf707dc85484d24205c63e12eb7c4bf39f2c52a60d977b58de38655ae8f80ad6  install_flash_player_11_linux.x86_64.tar.gz"
