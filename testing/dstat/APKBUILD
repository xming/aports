# Contributor: Francesco Colista <francesco.colista@gmail.com>
# Maintainer:
pkgname=dstat
pkgver=0.7.3
pkgrel=0
pkgdesc="A versatile resource statistics tool"
url="http://dag.wieers.com/home-made/dstat/"
arch="noarch"
license="GPL2+"
depends="python"
depends_dev="python-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-doc"
source="https://github.com/dagwieers/${pkgname}/archive/${pkgname}-${pkgver}.tar.gz"
_builddir="$srcdir"/$pkgname-$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	make || return 1
	return 0
}

package() {
	cd "$_builddir"
	make DESTDIR=$pkgdir install || return 1
}
md5sums="a8f8243b60aeebb2f8ebfd97526b4f30  dstat-0.7.3.tar.gz"
sha256sums="d87f5e2ebe76dff919f3e3e6f139940d2b2da75a38ee823b640e51d1964afa61  dstat-0.7.3.tar.gz"
sha512sums="a428299d5cfa1afad6daa5fde2bdbd4ec0d23d6ae1eea2145b794cab4604f2e2327d36a4abdcb00145d4cc96f2a8dd349680109af0c834f67d4ce92f7285ab4e  dstat-0.7.3.tar.gz"
