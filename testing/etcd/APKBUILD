sha512sums="6794526602d981c4b1fb3d7a51f9f2e35060f2b79e1e42ba030d4e3ce2d789d7701c04310caf580a6b18817b3f924d99ff437bb902f9db7c4a944a35b27b40e1  etcd-2.3.3.tar.gz
