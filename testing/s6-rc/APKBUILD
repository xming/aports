# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=s6-rc
pkgver=0.0.1.5
pkgrel=0
pkgdesc="A service manager for s6-based systems"
url="http://skarnet.org/software/s6-rc/"
arch="all"
license="ISC"
depends="s6"
depends_dev="skalibs-dev execline-dev s6-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://skarnet.org/software/$pkgname/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--prefix=/usr \
		--libdir=/usr/lib \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="a01f9abe53d7a41add9dafe45504dd3b  s6-rc-0.0.1.5.tar.gz"
sha256sums="1e9a0faf23df7d4eb89809346553c346f681f336b3c7410e623e467b0b249b2a  s6-rc-0.0.1.5.tar.gz"
sha512sums="2df6b8d766dcb4d95456547d84def09ff5d3f1a7fa84018ed756e778683c1ff9c257a87273ec99cbe5ff502b59d284a58f9f103fd8b94f000ff54d22d99d4651  s6-rc-0.0.1.5.tar.gz"
