sha512sums="05fb52afc95d8268370ba3f204f7b320b487573ee6126bc457024f13ca4ce44e6f9ffd4e900141b7d9a5117d4ddf43556e470e12850870fa2c3d850173e9ce75  xf86-input-libinput-0.20.0.tar.bz2"
