# Contributor: Alan Lacerda <alacerda@alpinelinux.org>
# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=mate-settings-daemon
pkgver=1.12.0
pkgrel=0
pkgdesc="MATE Settings daemon"
url="https://github.com/mate-desktop/mate-settings-daemon"
arch="all"
license="GPL2"
depends="mate-common mate-desktop"
depends_dev=""
makedepends="$depends_dev libtool intltool libmatekbd-dev freeglut-dev
	glib-dev gtk+2.0-dev dbus-glib-dev dconf-dev libxklavier-dev libsm-dev
	mate-desktop-dev polkit-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="http://pub.mate-desktop.org/releases/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--sysconfdir=/etc \
        	--with-gtk=2.0 \
		--enable-polkit \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="${pkgdir}" install || return 1
}

md5sums="514ae627c819bf89c95adca57700e8f1  mate-settings-daemon-1.12.0.tar.xz"
sha256sums="3407665779f446747d0d5bd43444621d724daa0b550f239b3d2b1ceecf8e09f8  mate-settings-daemon-1.12.0.tar.xz"
sha512sums="5649eb4ced8b605ee9167713db39a3db44eb937e38a76e1de665dd56879e12ace99976d331366a4f6cdb7fb64fa093491cfd4638755b01cf8a382c3f9e83d524  mate-settings-daemon-1.12.0.tar.xz"
